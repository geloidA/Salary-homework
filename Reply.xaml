<Window x:Class="SalaryHomework.Reply"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reply" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" >Полная зарплата, руб</Label>
        <Label Grid.Row="0" FontSize="48" VerticalAlignment="Top" x:Name="fullSalary" Height="101" Margin="0,60,0,0" ></Label>

        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" >НДФЛ 13%, руб</Label>
        <Label Grid.Row="1" FontSize="48" VerticalAlignment="Top" x:Name="personalTax" Height="102" Margin="0,60,0,0" Grid.RowSpan="2" ></Label>

        <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" >Зарплата на руки, руб</Label>
        <Label Grid.Row="2" FontSize="48" VerticalAlignment="Top" x:Name="actualSalary" Height="101" Margin="0,60,0,0" ></Label>
    </Grid>
</Window>
